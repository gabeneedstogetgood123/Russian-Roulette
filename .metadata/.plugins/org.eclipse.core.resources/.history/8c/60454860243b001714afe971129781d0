import java.util.Scanner;
public class game {
	public static void main (String[]args){
		gamestarter start = new gamestarter();
		System.out.println(start.Greeting());
		Scanner bot = new Scanner(System.in);
		String response = bot.nextLine();
		if(response.equalsIgnoreCase("yes")){
			System.out.println(start.Response());
		}
		else {
			System.out.println("BANG!");
			System.out.println("RIP!");
			System.out.println("SHOULD HAVE SAID YES");
			System.out.println("GAME OVER!");
		}
		Scanner bot2 = new Scanner(System.in);
		System.out.println("Would you like to play again?");
		String response2 = bot2.nextLine();
		if(response2.equalsIgnoreCase("yes")){
			System.out.println(start.Response());
		}
		else {
			System.out.println("THEN STAY DOWN!");
		}
	}
	
}
